* {
  background: rgba(40,44,52,0.8);
  foreground: #abb2bf;

  normal-black:   #282c34;
  normal-red:     #e06c75;
  normal-green:   #98c379;
  normal-yellow:  #d19a66;
  normal-blue:    #61afef;
  normal-magenta: #c678dd;
  normal-cyan:    #56b6c2;
  normal-white:   #abb2bf;

  bright-black:   #5c6370;
  bright-red:     #e06c75;
  bright-green:   #98c379;
  bright-yellow:  #d19a66;
  bright-blue:    #61afef;
  bright-magenta: #c678dd;
  bright-cyan:    #56b6c2;
  bright-white:   #ffffff;
}

* {
  background-color: rgba(0,0,0,0);
  color: @foreground;
}

window {
  background-color: @background;
  border: 2;
  border-radius: 10;
  border-color: @bright-blue;
  padding: 10;
}

mainbox {
   border:  0;
   padding: 0;
}

/* #message { */
