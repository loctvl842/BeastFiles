/* } */

/* #textbox { */
/*     background-color: red; */
/* } */

inputbar {
   spacing: 5;
   padding: 1;
}

prompt {
   padding: 6;
}

entry {
  background-color: rgba(92,99,112,0.8); /* bright-black */
  color: @bright-cyan;
  padding: 5px;
  border: 1;
  border-radius: 5;
  border-color: @bright-blue;
}

ci {
    border: 5;
}

listview {
  fixed-height: 0;
  spacing: 0;
  scrollbar: false;
  padding: 10 0;
  lines: 10;
}

element {
  padding: 5;
  margin: 2;
  border: 2;
  border-radius: 5;
  border-color: rgba(152,195,121,0.2); /* normal-green */
}

element.selected {
   background-color: rgba(152,195,121,0.5); /* normal-green */
}

mode-switcher {
   spacing: 20;
}

button {
   border: 0 0 2 0;
   border-color: red;
   padding: 5;
}

button.selected {
    color: #f80;
    border-color: #f80;
}



