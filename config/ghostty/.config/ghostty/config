keybind = ctrl+b>z=toggle_split_zoom

keybind = global:cmd+shift+enter=toggle_quick_terminal

keybind = ctrl+b>c=new_tab
keybind = alt+shift+h=previous_tab
keybind = alt+shift+l=next_tab
