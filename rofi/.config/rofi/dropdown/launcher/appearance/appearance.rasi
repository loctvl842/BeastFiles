}

window {
  width: 400px;
  location: northeast;
  x-offset: -220px;
  y-offset: 30;
  border-radius: 0;
  border: 2;
	border-color: @win-border;
}

listview {
  lines: 10;
	cycle: true;
  scrollbar: false;
}

inputbar {
  border-radius: 0;
  margin: 3 0;
  border: 0;
}

