	font: "Hack Nerd Font 10";
}

entry {
	placeholder: "Search this Beast ...";
	placeholder-color: @foreground-opacity;
	font: "Hack 10";
}

scrollbar {
  width: 0px;
  border: 0;
}

element {
	padding: 5 32;
}

element-icon {
	size: 16px;
}

element.selected {
  border-radius: 0;
}
